{
  "manifest_version": 3,
  "name": "AI Voice Assistant",
  "version": "1.0",
  "description": "Floating AI assistant for voice/text commands",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*", "<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  }
}
